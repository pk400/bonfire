{% extends 'base.jinja' %}
{% block title %}Register{% endblock %}
{% block pre_scripts %}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
{% endblock %}
{% block middle_content %}
<div class="content-box p-20">
  <h1 class="page-title">Register</h1>
  <form onsubmit="return on_register(this, '{{ url_for('api:accounts:register') }}');">
    <div class="form-group">
      <label for="email_address">Email Address</label><input type="text" id="email_address" name="email_address" required />
    </div>
    <div class="form-group">
      <label for="username">Username</label><input type="text" id="username" name="username" required />
    </div>
    <div class="form-group">
      <label for="password">Password</label><input type="password" id="password" name="password" required />
    </div>
    <div class="form-group">
      <label for="confirm_password">Confirm</label><input type="password" id="confirm_password" required />
      <span class="form-info" visibility=hidden id="confirm_password_info"></span>
    </div>
    <div class="form-group">
      <input class="submit-btn" type="submit" value="Register">
    </div>
  </form>
</div>
{% endblock %}
{% block post_scripts %}
<script type="text/javascript" src="{{ url_for('static', path='/scripts/register.js') }}"></script>
{% endblock %}
